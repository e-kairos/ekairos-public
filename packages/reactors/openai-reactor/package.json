{
  "name": "@ekairos/openai-reactor",
  "version": "1.22.0",
  "description": "Codex-only reactor for @ekairos/thread",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:reactor": "vitest run src/tests/codex.reactor.test.ts --reporter=verbose"
  },
  "peerDependencies": {
    "@ekairos/thread": "*"
  },
  "devDependencies": {
    "@ekairos/thread": "workspace:*",
    "@ekairos/tsconfig": "workspace:*",
    "@types/node": "^24.5.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-kairos/ekairos.git"
  },
  "homepage": "https://github.com/e-kairos/ekairos#readme",
  "bugs": {
    "url": "https://github.com/e-kairos/ekairos/issues"
  }
}
