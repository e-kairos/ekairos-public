{
  "name": "@ekairos/thread",
  "version": "1.21.100-beta.0",
  "description": "Pulzar Thread - Workflow-based AI Threads",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-kairos/ekairos-public.git",
    "directory": "packages/thread"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.js",
      "default": "./dist/schema.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js",
      "require": "./dist/runtime.js",
      "default": "./dist/runtime.js"
    },
    "./reactor": {
      "types": "./dist/thread.reactor.d.ts",
      "import": "./dist/thread.reactor.js",
      "require": "./dist/thread.reactor.js",
      "default": "./dist/thread.reactor.js"
    },
    "./mcp": {
      "types": "./dist/mcp.d.ts",
      "import": "./dist/mcp.js",
      "require": "./dist/mcp.js",
      "default": "./dist/mcp.js"
    },
    "./oidc": {
      "types": "./dist/oidc.d.ts",
      "import": "./dist/oidc.js",
      "require": "./dist/oidc.js",
      "default": "./dist/oidc.js"
    },
    "./codex": {
      "types": "./dist/codex.d.ts",
      "import": "./dist/codex.js",
      "require": "./dist/codex.js",
      "default": "./dist/codex.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.js",
      "default": "./dist/react.js"
    },
    "./instant": {
      "types": "./dist/stores/instant.store.d.ts",
      "import": "./dist/stores/instant.store.js",
      "require": "./dist/stores/instant.store.js",
      "default": "./dist/stores/instant.store.js"
    }
  },
  "typesVersions": {
    "*": {
      "schema": [
        "dist/schema.d.ts"
      ],
      "runtime": [
        "dist/runtime.d.ts"
      ],
      "reactor": [
        "dist/thread.reactor.d.ts"
      ],
      "mcp": [
        "dist/mcp.d.ts"
      ],
      "oidc": [
        "dist/oidc.d.ts"
      ],
      "codex": [
        "dist/codex.d.ts"
      ],
      "react": [
        "dist/react.d.ts"
      ],
      "instant": [
        "dist/stores/instant.store.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.52",
    "@ekairos/domain": "^1.21.100-beta.0",
    "@instantdb/admin": "0.22.126",
    "@instantdb/core": "0.22.126",
    "@vercel/mcp-adapter": "^1.0.0",
    "@vercel/sandbox": "^0.0.23",
    "ai": "^5.0.95",
    "ajv": "^8.17.1",
    "jose": "^6.1.3",
    "llamaindex": "^0.12.0",
    "react": "^19.2.0",
    "workflow": "4.1.0-beta.55",
    "xmlbuilder2": "^3.1.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@ekairos/tsconfig": "workspace:*",
    "@types/node": "^24.5.0",
    "@types/react": "^19.2.2",
    "typescript": "^5.9.2"
  }
}
